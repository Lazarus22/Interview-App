
<%= form_for @appointment do |f| %>
    <%= f.label :date %>
    <%= f.datetime_select :date, { ampm: true, order: [:day, :month, :year]} %><br>
    <!-- refine datetime selection and make sure to build in conflict scheduling logic-->
    <%= f.label "Interviewer" %><br>
    <%= f.collection_select :interviewer_id, @interviewers, :id, :name %><br>

    <%= f.label "Language" %><br>
    <%= f.collection_select :language_id, @languages, :id, :programming_languages %><br>

    <!--Build in logic for associating to logged in interviewee-->

    <%= f.label :difficulty %><br>
    <%= f.number_field :difficulty %><br>

    <%= f.label :interview_type %><br>
    <%= f.text_field :interview_type %><br>
    <!--find out to make interview type a dropdown with "Fit" and "Technical" options -->
    
    <%= f.label :link %><br>
    <%= f.text_field :link %><br>

    <%= f.label :note %><br>
    <%= f.text_area :note %><br>
    
    <%= f.submit %>

<% end %>


